<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tvchitiethocsinh"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Chi Tiet Hoc Sinh"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/teal_200"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="9dp" />

    <TextView
        android:id="@+id/tvlop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvchitiethocsinh"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Lop"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_below="@+id/tvlop"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Ten :"
            android:layout_weight="3"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:id="@+id/ln1"
        android:orientation="horizontal"
        android:layout_below="@+id/tvlop"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Ten :"
            android:layout_weight="3"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/tvNameDetail"
            android:layout_weight="7"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:id="@+id/ln2"
        android:orientation="horizontal"
        android:layout_below="@+id/ln1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Tuoi :"
            android:layout_weight="3"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:id="@+id/tvAgeDetail"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:id="@+id/ln3"
        android:orientation="horizontal"
        android:layout_below="@+id/ln2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="dia chi :"
            android:layout_weight="3"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:id="@+id/tvAdressDetail"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_below="@+id/ln3"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="174dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_marginTop="30dp"
        android:id="@+id/ln4"
        android:orientation="horizontal"
        android:layout_below="@+id/divider"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Co Giao :"
            android:layout_weight="3"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:id="@+id/tvTeacherDetail"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:id="@+id/ln5"
        android:orientation="horizontal"
        android:layout_below="@+id/ln4"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="Ngay Them :"
            android:layout_weight="3"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:id="@+id/tvDateDetail"
            android:text="20/12/1995"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btnBackDetail"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">

    </Button>

</RelativeLayout>